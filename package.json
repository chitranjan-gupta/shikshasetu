{
  "name": "shikshasetu",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "vite preview --port 5173",
    "dev": "vite dev --port 5173",
    "dev:chrome": "npm run build:chrome && cd build && npx web-ext run --target chromium",
    "dev:firefox": "npm run build:firefox && cd build && npx web-ext run --target firefox-desktop",
    "lint": "eslint .",
    "format": "prettier --write ./src",
    "build": "tsc -b && vite build --config vite.config.ts",
    "build:chrome": "tsc -b && cross-env CHROME_ENV=true vite build --config vite.config.ts && vite build --config vite-background-script.config.ts && vite build --config vite-content-script.config.ts",
    "build:firefox": "tsc -b && cross-env CHROME_ENV=false vite build --config vite.config.ts && vite build --config vite-background-script.config.ts && vite build --config vite-content-script.config.ts",
    "chrome": "cd build && npx web-ext run --target chromium",
    "firefox": "cd build && npx web-ext run --target firefox-desktop"
  },
